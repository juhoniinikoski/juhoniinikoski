---
import Head from "@components/head.astro";
import Footer from "@components/footer.astro";
import { SITE } from "@consts";

type Props = {
  title: string;
  description: string;
};

const { description } = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <Head title={SITE.NAME} description={description} />
  </head>
  <body>
    <main>
      <slot />
    </main>
    <Footer />
  </body>
</html>
